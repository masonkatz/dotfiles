#!/bin/zsh

{{- if eq .org "teradata" }}
export ORGANIZATION=teradata
export GOPRIVATE="github.com/Teradata-*,github.td.teradata.com/*"

# gcloud cli

gcpsdk=${HOME}/src/gcp/google-cloud-sdk

if [[ -f "${gcpsdk}/path.zsh.inc" ]]; then
	source "${gcpsdk}/path.zsh.inc"
fi

if [[ -f "${gcpsdk}/completion.zsh.inc" ]]; then
	source "${gcpsdk}/completion.zsh.inc"
fi
{{- end }}

{{- if eq .org "endobit" }}
export ORGANIZATION=endobit
{{- end }}
