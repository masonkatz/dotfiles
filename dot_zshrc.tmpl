#!/bin/zsh

DISABLE_AUTO_UPDATE="true"

if [[ -r "${XDG_CACHE_HOME:-$HOME/.cache}/p10k-instant-prompt-${(%):-%n}.zsh" ]]; then
	source "${XDG_CACHE_HOME:-$HOME/.cache}/p10k-instant-prompt-${(%):-%n}.zsh"
fi

export ZSH=~/.oh-my-zsh

if [[ "$TERM" != "dumb" ]]; then
	ZSH_THEME="powerlevel10k/powerlevel10k"
	[[ ! -f ~/.p10k.zsh ]] || source ~/.p10k.zsh
fi

CASE_SENSITIVE="true"

plugins=(git git-flow-avh golang httpie)

{{ if eq .chezmoi.os "darwin" }}
plugins+=(brew docker docker-compose gnu-utils kubectl kubectx thefuck)
{{ end }}

plugins+=(zsh-syntax-highlighting) # says it needs to be last


{{ if eq .org "softiron" }}
export SOFTIRON=1
export GOPRIVATE=git.softiron.com
{{ end }}


{{ if eq .chezmoi.os "darwin" }}
if [[ -z "$INSIDE_EMACS" ]]; then
	test -e "${HOME}/.iterm2_shell_integration.zsh" && source "${HOME}/.iterm2_shell_integration.zsh"
fi
{{ end }}


eval `dircolors -b "${HOME}/.dircolors"`

DEFAULT_USER=`whoami`

source $ZSH/oh-my-zsh.sh

COMPLETIONS=~/.completions
[[ -d $COMPLETIONS ]] || mkdir $COMPLETIONS
fpath=($COMPLETIONS $fpath)

autoload -Uz compinit; compinit

# Do this after zsh setup to fix the ls aliases

case $TERM in
eterm-*color)
	chpwd() { print -P "\033AnSiTc %d" }
	print -P "\033AnSiTu %n"
	print -P "\033AnSiTc %d"
	alias ls="ls -F --color"
	DISABLE_AUTO_TITLE="true"
	;;
xterm*|screen*color)
	alias ls="ls -F --color"
        ;;
esac

unalias lsa			# unwanted (from zsh)

{{ if eq .chezmoi.os "darwin" }}
alias ack="ag"
alias fack="ag -Q"
{{ end }}
alias cz=chezmoi
alias cza="chezmoi apply"
alias czd="chezmoi diff"
alias czs="chezmoi status"
alias e=emacsclient
alias la="ls -a"
alias ll="ls -la"
alias m=make

export VISUAL=emacsclient
export EDITOR=emacsclient
export ALTERNATE_EDITOR="emacs -nw"

setopt inc_append_history
unsetopt sharehistory

{{ if eq .chezmoi.os "darwin" }}
if which bat > /dev/null; then
	alias less=bat
fi
{{ end }}
