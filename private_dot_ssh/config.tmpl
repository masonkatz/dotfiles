Host *
{{- if eq .chezmoi.os "darwin" }}
  UseKeychain           yes
{{- end }}
  AddKeysToAgent        yes
  ServerAliveInterval   120
  TCPKeepAlive          no
  ForwardAgent          yes
{{- if eq .org "endobit" }}
  ForwardX11            yes
{{- end }}

{{- if eq .chezmoi.os "darwin" }}

Host bookworm
  Port                  22003
  Hostname              localhost
{{- end }}

{{- if eq .org "teradata" }}

Host github-personal
  IdentityFile          ~/.ssh/github
  IdentitiesOnly        yes
  User                  git
  HostName              github.com
{{- end }}  

{{- if eq .org "endobit" }}

Host tdbook
  User                  mason.katz
  Hostname              tdbook.local
{{- end }}
